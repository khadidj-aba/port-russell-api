<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Nouvelle Réservation</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #eef6fa;
      padding: 2rem;
    }
    form {
      background-color: #fff;
      padding: 1.5rem;
      border-radius: 8px;
      width: 400px;
    }
    label {
      display: block;
      margin-top: 1rem;
    }
    input, select {
      width: 100%;
      padding: 0.5rem;
      margin-top: 0.3rem;
    }
    button {
      margin-top: 1.5rem;
      padding: 0.6rem 1rem;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
    }
    .error {
      color: red;
      margin-top: 1rem;
    }
    a {
      display: inline-block;
      margin-top: 1rem;
    }
  </style>
</head>
<body>
  <h1>Nouvelle Réservation</h1>

  <% if (messages && messages.error) { %>
    <div class="error"><%= messages.error[0] %></div>
  <% } %>

  <form action="/reservations" method="POST">
    <label for="catwayNumber">Catway :</label>
    <select name="catwayNumber" id="catwayNumber" required>
      <% catways.forEach(c => { %>
        <option value="<%= c.catwayNumber %>">Catway <%= c.catwayNumber %> - <%= c.catwayType %></option>
      <% }) %>
    </select>

    <label for="clientName">Nom du client :</label>
    <input type="text" name="clientName" id="clientName" required>

    <label for="boatName">Nom du bateau :</label>
    <input type="text" name="boatName" id="boatName" required>

    <label for="startDate">Date de début :</label>
    <input type="date" name="startDate" id="startDate" required>

    <label for="endDate">Date de fin :</label>
    <input type="date" name="endDate" id="endDate" required>

    <button type="submit">Réserver</button>
  </form>

  <a href="/reservations">← Retour à la liste</a>
</body>
</html>
